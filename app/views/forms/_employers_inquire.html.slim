= form_for @message, url: employers_inquiries_path do |f|
  = f.hidden_field :students, class: 'inquire-students'
  = f.hidden_field :email, value: @employer.email
  = f.hidden_field :title, value: @employer.first_name
  = f.hidden_field :name, value: @employer.first_name

  h4
    = @employer.first_name

  - if @employer.last_name
    h4
      = @employer.last_name
  - else
    = f.label :name, 'Last Name'
    = f.text_field :name, required: true

  - if @employer.phone_number
    h5
      = @employer.phone_number
  - else
    = f.label :phone_number
    = f.telephone_field :phone_number, required: true, placeholder: '000-000-0000'

  = f.label :content, 'Inteview date preference'
  = f.text_area :content

  = f.submit 'Inquire', data: { disable_with: "Sending..."}
